DEST=/opt/stack
SCREEN_LOGDIR=$DEST/logs

_PASSWD=usapro
ADMIN_PASSWORD=$_PASSWD
MYSQL_PASSWORD=$_PASSWD
RABBIT_PASSWORD=$_PASSWD
SERVICE_PASSWORD=$_PASSWD
SERVICE_TOKEN=$_PASSWD

HOST_IP_IFACE=eth0
HOST_IP=$(LC_ALL=C /sbin/ifconfig ${HOST_IP_IFACE} | grep -m 1 'inet addr' | cut -d: -f2 | awk '{print $1;}')

ENABLED_SERVICES=g-api,g-reg,key,n-api,n-crt,n-obj,n-cpu,n-net,n-vol,n-sch,n-novnc,n-xvnc,n-cauth,horizon,mysql,rabbit,quantum,q-svc,q-agt
EXTRA_OPTS=(
    libvirt_vif_type=ethernet
    libvirt_vif_driver="quantum.plugins.nec.nova.libvirt_vif.LibvirtOVSVIFINFODriver"
    linuxnet_interface_driver="quantum.plugins.nec.nova.linux_net.LinuxOVSVIFINFOInterfaceDriver"
    quantum_use_dhcp=True
)
Q_PLUGIN="nec"
Q_HOST=$HOST_IP

NEC_PLUGIN_DIR=$DEST/quantum-openflow-plugin
NEC_PLUGIN_REPO=http://github.com/nec-openstack/quantum-openflow-plugin.git
NEC_PLUGIN_BRANCH=essex-proto

IMAGE_URLS+=",http://www.openvswitch.org/tty-quantum.tgz"
DEFAULT_IMAGE_NAME=tty-quantum
